<div class="post" data-isbn={{id}}>
  <div class="post-info">
    <div class="book-cover">
      <img src={{attributes.coverImageUrl}} alt="">
    </div>
    <div class="book-info">
      <a href="#">
        <p class="title"><span class="book-label">Title: </span>{{attributes.title}}</p>
      </a>
      <p><span class="book-label">Edition: </span>{{attributes.edition}}</p>
      <p><span class="book-label">Author: </span>{{attributes.author}}</p>
      <p><span class="book-label">Edition: </span>{{id}}</p>
    </div>
  </div>
  <div class="book-count">
    {{bookCount}} Books Available
  </div>

</div>