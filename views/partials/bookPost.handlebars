<div class="books-container" data-description="{{description}}" data-price="{{price}}" data-condition="{{condition}}">
    <div class="book-content">
        <div class="book-image-container">
            <img src="{{imgURL}}" alt="{{description}}">
        </div>
        <div class="book-info-container">
            <a href="#" class="book-title">{{description}}</a> <span class="book-price">${{price}}</span>
            <span class="book-condition">{{condition}}</span>
        </div>
    </div>
</div>